<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">never</item>
    </style>

    <style name="GameTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

</resources>
